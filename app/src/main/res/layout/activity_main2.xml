<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_main_buttom"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignTop="@+id/ll_main_buttom"
        android:background="@color/tab_normal_color"/>
    <LinearLayout
        android:id="@+id/ll_main_buttom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/tab_gb"
        android:weightSum="4">
        <RelativeLayout
            android:id="@+id/rl_main_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/map_choose"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_main_map"
                android:layout_below="@id/iv_main_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="@string/module_map"
                android:textColor="#a1ca43"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_main_uoload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_upload"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/upload_unchoose"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_main_upload"
                android:layout_below="@id/iv_main_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="@string/module_upload"
                android:textColor="@color/tab_normal_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_main_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_list"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/list_unchoose"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_main_list"
                android:layout_below="@id/iv_main_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="@string/module_list"
                android:textColor="@color/tab_normal_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_main_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_main_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/user_unchoose"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_main_user"
                android:layout_below="@id/iv_main_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="@string/module_list"
                android:textColor="@color/tab_normal_color"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>