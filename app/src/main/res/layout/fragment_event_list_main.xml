<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_fragment_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/power_green" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="123"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_fragment_event_list_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/return_button" />

    </RelativeLayout>
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:id="@+id/super_recycle_view"
        android:layout_below="@+id/rl_fragment_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>