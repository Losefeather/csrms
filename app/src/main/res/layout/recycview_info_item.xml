<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="190dp">
    <TextView
        android:id="@+id/tv_recycview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:text="2018-09-03 \n 18:09:33"/>
    <TextView
        android:id="@+id/tv_recycbiew_item_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="位置"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@+id/tv_recycview_item_time"
        android:layout_below="@+id/tv_recycview_item_time"/>
    <TextView
        android:layout_marginLeft="100dp"
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@color/power_green"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_photo"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/buildingworker"
        app:civ_border_width="1px"
        app:civ_border_color="@color/power_green"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/civ_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_recycbiew_item_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="8sp"
            android:text="项目名称:"/>
        <TextView
            android:id="@+id/tv_recycbiew_item_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="8sp"
            android:text="问题类型:"/>
        <TextView
            android:id="@+id/tv_recycbiew_item_commit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_margin="3dp"
            android:text="提交人:"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <wanmao.csrms.UI.NineGirdLayout.NineGridTestLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ninegridayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:sapcing="4dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>